
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Konto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/main_toolbar"/>

    <TextView
        android:id="@+id/etVorname1"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:text=" Vorname"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/etVorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        android:textSize="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#F0F0F0"
        android:gravity="left|center_vertical"/>

    <TextView
        android:id="@+id/etNachname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text=" Nachname"
        android:textColor="@color/black"
        android:textSize="17dp" />
    <Button
        android:id="@+id/etNachname"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#F0F0F0"
        android:gravity="left|center_vertical"/>


    <TextView
        android:id="@+id/etBenutzername1"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text=" Email"/>
    <Button
        android:id="@+id/etBenutzername"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#F0F0F0"
        android:gravity="left|center_vertical"/>

    <TextView
        android:id="@+id/etGrade1"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text=" Klasse"/>
    <Button
        android:id="@+id/etGrade"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#F0F0F0"
        android:gravity="left|center_vertical"/>
    <TextView
        android:id="@+id/tvSummits"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Summits besucht"/>
    <Button
        android:id="@+id/etSummits"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:backgroundTint="#F0F0F0"
        android:gravity="left|center_vertical"/>






<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#557a95"
        android:onClick="logout"
        android:text="Abmelden" />




</RelativeLayout>


</LinearLayout>

<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white">

    <include
        layout="@layout/main_nav_drawer"/>

</RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>