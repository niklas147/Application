<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:text="Die 7 Summits"
                    android:textColor="#557A95"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/editTextTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B0557A95"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="30dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="30dp"
                    android:text="Alle 7 Summits zu besichtigen ist der Traum jedes Schülers. Doch nur Einigen ist dieses Kunststück bisher gelungen. Schaffst du es alle 7 Summits zu erklimmen? Battle dich mit deinen Freunden und teile deine Erfolge in der App.\nUm welche Orte es sich in Mannheim und Umgebung handelt, erfährst du hier!"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textViewStuhlberg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="1. Der Stuhlberg"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageViewStuhlberg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoStuhlberg"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/stuhlberg_cut" />

                <TextView
                    android:id="@+id/textViewBarockschloss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="2. Das Barockschloss"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageViewBarockSchloss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoBarockSchloss"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/barockschloss" />
                <TextView
                    android:id="@+id/textViewWeisserStein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="3. Der Weisse Stein"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageViewWeisserStein"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoWeisserStein"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/weisser_stein" />
                <TextView
                    android:id="@+id/textViewHeiligenberg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="4. Der Heiligenberg"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />
                <ImageView
                    android:id="@+id/imageViewHeiligenberg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoHeiligenberg"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/heiligenberg" />
                <TextView
                    android:id="@+id/textViewWildgehege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="5. Das Wildgehege Karlstern"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />
                <ImageView
                    android:id="@+id/imageViewWildgehege"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoWildgehege"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/wildgehege_karlstern" />

                <TextView
                    android:id="@+id/textViewSchlossSchwetzingen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="6. Das Schloss Schwetzingen"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageViewSchlossSchwetzingen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:onClick="gotoSchlossSchwetzingen"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/schloss_schwetzingen" />
                <TextView
                    android:id="@+id/textViewTaubenkopf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="7. Der Taubenkopf"
                    android:textColor="#423D3D"
                    android:textStyle="bold"
                    android:textSize="25dp" />
                <ImageView
                    android:id="@+id/imageViewTaubenkopf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:onClick="gotoTaubenkopf"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/taubenkopf" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#557A95"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="Über 7 Summits \n\nDie 7 Summits AG unterstützt Schüler/innen die 7 Summits zu erklimmen und ihre Erfolge sichtbar zu tracken.
                    \n\n Kontakt \n\n Niklas Klose und Selina Hölzl\n Coblitzallee 1-9\n 68163 Mannheim \n E-mail: info@seven-summits.de"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>